@* Import Bootstrap Icons *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

<div id="contactUs" class="container my-5">
    <!-- Title Section -->
    <h2 class="text-center fw-bold mb-2" data-aos="fade-up">
        Contact Us
    </h2>
    <p class="text-center text-muted mb-4" data-aos="fade-up" data-aos-delay="200">
        Get in touch with us for any inquiries or assistance
    </p>

    <div class="row">
        <!-- Left Section -->
        <div class="col-md-6">
            <div class="row">
                <!-- Card 1: Address -->
                <div class="col-md-6 mb-4" data-aos="flip-left" data-aos-delay="300">
                    <div class="card border-0 shadow-sm h-100 text-center p-3">
                        <div class="card-body">
                            <div class="display-5 mb-2 text-primary">
                                <i class="bi bi-geo-alt-fill"></i>
                            </div>
                            <h5 class="card-title">Address</h5>
                            <p class="card-text text-muted">
                                Street 7, Main Jaljit Society, Near Mavdi, 150ft Ring Road, Rajkot - 360001.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Card 2: Email -->
                <div class="col-md-6 mb-4" data-aos="flip-left" data-aos-delay="400">
                    <div class="card border-0 shadow-sm h-100 text-center p-3">
                        <div class="card-body">
                            <div class="display-5 mb-2 text-danger">
                                <i class="bi bi-envelope-fill"></i>
                            </div>
                            <h5 class="card-title">Email</h5>
                            <p class="card-text text-muted">rnv1924@gmail.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Card 3: Phone -->
                <div class="col-md-6 mb-4" data-aos="flip-left" data-aos-delay="500">
                    <div class="card border-0 shadow-sm h-100 text-center p-3">
                        <div class="card-body">
                            <div class="display-5 mb-2 text-success">
                                <i class="bi bi-telephone-fill"></i>
                            </div>
                            <h5 class="card-title">Phone</h5>
                            <p class="card-text text-muted">+91 7984767883</p>
                        </div>
                    </div>
                </div>

                <!-- Card 4: Open Hours -->
                <div class="col-md-6 mb-4" data-aos="flip-left" data-aos-delay="600">
                    <div class="card border-0 shadow-sm h-100 text-center p-3">
                        <div class="card-body">
                            <div class="display-5 mb-2 text-info">
                                <i class="bi bi-clock"></i>
                            </div>
                            <h5 class="card-title">Open Hours</h5>
                            <p class="card-text text-muted">
                                Monday-Friday 9:00 AM to 5:00 PM
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Section: Contact Form -->
        <div class="col-md-6" data-aos="fade-up" data-aos-delay="700">
            <div class="card p-4 border-0" style="background-color: #052C65; color: #fff;">
                <h4 class="text-center mb-4">Send a Message</h4>
                <form method="post" action="/Contact/Submit">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Your Name"
                               style="background-color: #052C65; color: #fff;" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Your Email"
                               style="background-color: #052C65; color: #fff;" required />
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="4"
                                  placeholder="Your Message" style="background-color: #052C65; color: #fff;" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-light w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

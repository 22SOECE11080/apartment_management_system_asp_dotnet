@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0" style="min-height: 100vh; overflow: hidden;">
    <!-- Top Bar -->
    <div class="w-100" style="height: 20px; background-color: #052C65"></div>

    <!-- Main Content -->
    <div class="row w-100 vh-100">
        <!-- Left Section -->
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center bg-white text-center">
            <img src="~/images/rnvlogo.png" alt="RNV Estate Logo" class="img-fluid mb-3" style="width: 200px;" />
            <h3 class="mb-3">Forgot Password</h3>
            <p class="text-muted mb-4">
                Enter your email to reset your password
            </p>
            <form class="w-100" style="max-width: 400px;" method="post" action="@Url.Action("Reset", "Home")">
                <div class="mb-3 text-start">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
                </div>
                <button type="submit" class="btn btn-primary w-100" style="background-color: #052C65" ;>
                    
                    <span> Send OTP</span>

                </button>
            </form>
            <a href="@Url.Action("SignIn", "Home")" class="mt-3 text-muted" style="text-decoration: none;">← Back</a>
        </div>

        <!-- Right Section -->
        <div class="col-md-6 d-flex justify-content-center align-items-center bg-light px-5 py-4">
            <div class="text-center">
                <img src="~/images/forget.jpg" alt="Forgot Password Illustration" class="img-fluid mb-3" style="max-width: 80%;" />
                <h4>Efficient Living Starts Here</h4>
                <p class="text-muted">
                    Our platform is built to meet the needs of apartment communities
                    with intuitive, practical, and accessible features.
                </p>
                <p class="text-muted small">
                    Copyright © 2023 RNV Designed by RNV
                </p>
            </div>
        </div>
    </div>
</div>

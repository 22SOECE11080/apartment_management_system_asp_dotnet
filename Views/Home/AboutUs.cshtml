@* Import Bootstrap Icons *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

<div id="aboutUs" class="container py-5 scroll-section">
    <!-- Section Header -->
    <div class="text-center mb-5" data-aos="fade-up" data-aos-duration="1200">
        <h2 class="fw-bold">About Us</h2>
        <p class="text-muted">Our Introduction</p>
    </div>

    <div class="row align-items-center">
        <!-- Left Content - Image -->
        <div class="col-md-4 d-flex justify-content-center" data-aos="zoom-in" data-aos-duration="1000">
            <img src="~/images/2.jpg" alt="About Us"
                 style="width: 400px; height:400px;  object-fit: cover;" />
        </div>

        <!-- Right Content -->
        <div class="col-md-8">
            <div class="row g-3">
                <!-- Card 1 -->
                <div class="col-md-4" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="200">
                    <div class="card text-center border-0 shadow-sm">
                        <div class="card-body">
                            <span class="fs-2 text-primary"><i class="bi bi-lock"></i></span>
                            <h6 class="mt-3 fw-bold">Real-Time Communication</h6>
                            <p class="text-muted small">Connect residents and management effortlessly.</p>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col-md-4" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="400">
                    <div class="card text-center border-0 shadow-sm">
                        <div class="card-body">
                            <span class="fs-2 text-primary"><i class="bi bi-tools"></i></span>
                            <h6 class="mt-3 fw-bold">Maintenance</h6>
                            <p class="text-muted small">Simplify maintenance requests and resolutions for better service quality.</p>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col-md-4" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="600">
                    <div class="card text-center border-0 shadow-sm">
                        <div class="card-body">
                            <span class="fs-2 text-primary"><i class="bi bi-shield-lock"></i></span>
                            <h6 class="mt-3 fw-bold">Data Security</h6>
                            <p class="text-muted small">Ensure data safety and reliability for all apartment management tasks.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description Section -->
            <div class="mt-4" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="800">
                <p class="text-muted">
                    We are a dedicated team focused on making apartment living and management smarter, simpler, and stress-free.
                    With a blend of innovative technology and user-centric design, our platform ensures better communication,
                    transparent management, and a seamless living experience. Join us in revolutionizing the way apartments are managed!
                </p>
            </div>

            <!-- Button Section -->
            <div class="mt-3" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="1000">
                <button class="btn btn-outline-dark">Know More</button>
            </div>
        </div>
    </div>
</div>

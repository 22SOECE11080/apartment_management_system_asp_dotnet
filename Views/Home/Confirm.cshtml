@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0" style="min-height: 100vh; overflow: hidden;">
    <!-- Top Bar -->
    <div class="w-100" style="height: 20px; background-color: #052C65;"></div>

    <!-- Success Message Section -->
    <div class="bg-white shadow-lg rounded text-center p-5 mt-5 mx-auto" style="max-width: 900px;">
        <img src="~/Assets/image/rnvlogo.png" alt="RNV Estate Logo" class="img-fluid mb-4" style="width: 200px;" />
        <h3 class="text-dark fw-bold mb-3">You have Successfully Reset Your Password</h3>
        <p class="text-muted fs-5 mb-4">Click the button below to return to the sign-in page.</p>

        <a href="@Url.Action("SignIn", "Home")" class="btn w-100 text-white" style="background-color: #052C65; text-decoration: none;">
            Click to Sign In
        </a>
    </div>
</div>
